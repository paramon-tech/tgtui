# Maintainer: paramon-tech <paramon-tech@users.noreply.github.com>
pkgname=tgtui
pkgver=VERSION
pkgrel=1
pkgdesc="Telegram TUI client focused on text messaging"
arch=('x86_64' 'aarch64')
url="https://github.com/paramon-tech/tgtui"
license=('GPL-3.0-only')
depends=('glibc')

source_x86_64=("${pkgname}-${pkgver}-x86_64.tar.gz::https://github.com/paramon-tech/tgtui/releases/download/v${pkgver}/tgtui_${pkgver}_linux_amd64.tar.gz")
source_aarch64=("${pkgname}-${pkgver}-aarch64.tar.gz::https://github.com/paramon-tech/tgtui/releases/download/v${pkgver}/tgtui_${pkgver}_linux_arm64.tar.gz")
sha256sums_x86_64=('SKIP')
sha256sums_aarch64=('SKIP')

package() {
    install -Dm755 tgtui "${pkgdir}/usr/bin/tgtui"
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
